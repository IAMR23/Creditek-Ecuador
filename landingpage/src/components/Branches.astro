          </p>



            <iframe  class="w-full h-80 rounded-xl border" src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3989.7664444010516!2d-78.561906!3d-0.292176!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMMKwMTcnMzEuOCJTIDc4wrAzMyc0Mi45Ilc!5e0!3m2!1ses-419!2sec!4v1767419637738!5m2!1ses-419!2sec" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            
        </div>
      </div>
    </div>

    <!-- Sucursales -->
    <div>
      <h3 class="text-2xl font-bold text-orange-500 mb-8">
        Nuestras Sucursales
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {
          branches.map((branch) => (
            <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group">
              <img
                src={branch.image}
                alt={branch.name}
                class="w-full h-72 object-cover group-hover:scale-105 transition-transform duration-500"
              />

              <div class="p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-1">
                  {branch.name}
                </h4>
                <p class="text-gray-600 text-sm mb-4">üìç {branch.address}</p>

                <div class="flex justify-end">
  
                  <a
                    href={branch.map}
                    target="_blank"
                    class=" p-4 bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded-lg transition hover:-translate-y-0.5 hover:shadow-lg
"
                  >
