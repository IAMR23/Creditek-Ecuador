<header id="navbar" class="fixed w-full transition-all duration-300 z-50">
<nav class="container mx-auto px-4 py-4 flex items-center justify-between relative">
    <div class="flex items-center">
      <a href="/">
        <img src="/Creditek/logo.png" alt="" srcset="" width="150" />
      </a>
    </div>

    <!-- Menú para pantallas grandes -->
<div
  class="hidden md:flex space-x-8 font-bold text-white
         absolute left-1/2 transform -translate-x-1/2 text-center justify-center items-center"
>
  <a href="/#home" class="nav-link">Inicio</a>
  <a href="/#oficinas" class="nav-link">Oficinas</a>
  <a href="/#productos-servicios" class="nav-link">Productos y Servicios</a>
  <a href="/#credito" class="nav-link">Obten un Crédito</a>
  <a href="/#quienes-somoes" class="nav-link">Quienes somos</a>
  <a href="/#contactanos" class="nav-link">Contáctanos</a>
</div>

    <!-- Botón hamburguesa para móviles -->
    <button id="menu-toggle" class="md:hidden flex items-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 text-white"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Menú móvil desplegable -->
  <div
    id="mobile-menu"
    class="hidden md:hidden  bg-opacity-90 backdrop-blur-sm text-white text-center"
  >
    <div class="container mx-auto px-4 py-3 flex flex-col space-y-4">
      <a href="/#home" class="nav-link">Inicio</a>
  <a href="/#oficinas" class="nav-link">Oficinas</a>
  <a href="/#productos-servicios" class="nav-link">Productos y Servicios</a>
  <a href="/#credito" class="nav-link">Obten un Crédito</a>
  <a href="/#quienes-somoes" class="nav-link">Quienes somos</a>
  <a href="/#contactanos" class="nav-link">Contáctanos</a>
    </div>
  </div>
</header>

<style>
  .nav-link {
    position: relative;
    transition: all 0.3s ease;
  }

  .nav-link:after {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  .nav-link:hover:after {
    width: 100%;
  }

  #navbar {
    background-color: rgba(91, 86, 86, 0);
    backdrop-filter: blur(5px);
  }

  #navbar.scrolled {
    background-color: rgba(81, 72, 72, 0.7);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
</style>

<script>
  // Manejo del menú móvil
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }

  // Efecto de transparencia al hacer scroll
  const navbar = document.getElementById("navbar");

  window.addEventListener("scroll", () => {
    if (navbar) {
      if (window.scrollY > 50) {
        navbar.classList.add("scrolled");
      } else {
        navbar.classList.remove("scrolled");
      }
    }
  });

  // Cerrar menú móvil al hacer clic en un enlace
  const mobileLinks = document.querySelectorAll("#mobile-menu .nav-link");

  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      if (mobileMenu) {
        mobileMenu.classList.add("hidden");
      }
    });
  });
</script>
